{
    "$id": "http://example.com/review_schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "reviewer",
        "round",
        "original_article_doi"
    ],
    "title": "The schema of a review.",
    "type": "object",
    "properties": {
        "reviewer": {
            "$id": "#/properties/reviewer",
            "title": "The author of the review.",
            "type": "object",
            "examples": [
                {
                    "name": "Karl J. Friston",
                    "number": 1
                }
            ],
            "properties": {
                "number": {
                    "$id": "#/properties/reviewer/properties/number",
                    "type": "integer",
                    "title": "The reviewer's number."
                },
                "name": {
                    "$id": "#/properties/reviews/items/properties/reviewer/properties/name",
                    "type": "string",
                    "title": "The reviewer's name."
                }
            },
            "additionalProperties": true
        },
        "round": {
            "$id": "#/properties/reviews/items/properties/round",
            "type": "integer",
            "title": "The round of the review.",
            "examples": [
                1,2
            ]
        },
        "original_article_doi":{
            "$id": "#/properties/reviews/items/properties/original_article_doi",
            "type": "string",
            "title": "The DOI of the reviewed article."
        }
        
    }
}